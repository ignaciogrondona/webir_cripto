<p id="notice"><%= notice %></p>

<h1>Criptocurrencies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @criptocurrencies.each do |criptocurrency| %>
      <tr>
        <td><%= criptocurrency.name %></td>
        <td><%= link_to 'Show', criptocurrency %></td>
        <td><%= link_to 'Edit', edit_criptocurrency_path(criptocurrency) %></td>
        <td><%= link_to 'Destroy', criptocurrency, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Criptocurrency', new_criptocurrency_path %>
